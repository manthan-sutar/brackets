<%- include('../partials/headers.ejs'); %>

    <div class="p-10">
       <div class="border rounded p-6">
        <div class="inline-flex items- w-full justify-between">
            <h1 class="font-bold text-xl"><%= tournament.name %></h1>
            <h1 class="font-bold text-lg text-gray-600">Total Competitors : <%= tournament.number_of_competators %></h1>
        </div>

        <% if(tournament.is_active == false){ %>
            <p class="mt-2">Click on start button to randomise competitors and start brackets.</p>
            <button class="mt-4 text-white bg-green-600 rounded-full px-4 py-2 hover:bg-teal-900 font-semibold lowercase duration-700" id="start-brackets">Start Brackets</button>
        <% } %>
    </div>

    <% if(tournament.matches.length > 0){ %>
        <div class="flex flex-wrap overflow-hidden p-6">
            <div class="w-1/2 overflow-hidden sm:w-1/2 md:w-1/2 lg:w-1/2 xl:w-1/2 justify-start">
                <% leftMatches.forEach(function(match) {%>
                    <div>
                        <div class="py-4 px-4 w-40 my-2 bg-gray-100 border rounded justify-center items-center cursor-pointer" onclick="openScoreModal('<%= JSON.stringify(match.match_competitors[0]) %>')">
                            <div class="inline-flex justify-center items-center w-full">
                                <h1 class="font-bold text-xl"><%= match.match_competitors[0].competitor.name %></h1>
                            </div>
                            <% if(match.winner_id == match.match_competitors[0].competitor_id){ %>
                                <div class="border-red-600">
                                    <h1>Winner</h1>
                                </div>
                            <% } %>
                        </div>
    
                        <div class="px-4 w-40 bg-gray-100 rounded justify-center items-center">
                            <h1 class="font-bold my-2 inline-flex justify-center items-center w-full">vs</h1>
                        </div>
                        
                        <div class="py-4 px-4 h-30 w-40 my-2 bg-gray-100 border rounded justify-center items-center cursor-pointer" onclick="openScoreModal('<%= JSON.stringify(match.match_competitors[1]) %>')">
                            <div class="inline-flex justify-center items-center w-full">
                                <h1 class="font-bold text-xl"><%= match.match_competitors[1].competitor.name %></h1>
                                <% if(match.winner_id == match.match_competitors[1].competitor_id){ %>
                                    <h1>Winner</h1>
                                <% } %>
                            </div>
                        </div>
                       </div>
                <% })%>
            </div>
            <div class="w-1/2 overflow-hidden sm:w-1/2 md:w-1/2 lg:w-1/2 xl:w-1/2 justify-end w-full">
                <% rightMatches.forEach(function(match) {%>
                   <div class="">
                    <div class="py-4 px-4 w-40 my-2 bg-gray-100 border rounded justify-center items-center cursor-pointer" onclick="openScoreModal('<%= JSON.stringify(match.match_competitors[0]) %>')">  
                        <div class="inline-flex justify-center items-center w-full">
                            <h1 class="font-bold text-xl"><%= match.match_competitors[0].competitor.name %></h1>
                        </div>
                    </div>

                    <div class="px-4 w-40 bg-gray-100 rounded justify-center items-center">
                        <h1 class="font-bold my-2 inline-flex justify-center items-center w-full">vs</h1>
                    </div>
                    
                    <div class="py-4 px-4 h-30 w-40 my-2 bg-gray-100 border rounded justify-center items-center cursor-pointer" onclick="openScoreModal('<%= JSON.stringify(match.match_competitors[1]) %>')">
                        <div class="inline-flex justify-center items-center w-full"> 
                            <h1 class="font-bold text-xl"><%= match.match_competitors[1].competitor.name %></h1>
                            <% if(match.winner_id == match.match_competitors[1].competitor_id){ %>
                                <h1>Winner</h1>
                            <% } %>
                        </div>
                    </div>
                   </div>
                <% })%>
            </div>
          </div>
    <% } %>
    </div>

      <div class="fixed z-10 overflow-y-auto top-0 w-full left-0 hidden" id="modal">
        <div class="flex items-center justify-center min-height-100vh pt-4 px-4 pb-20 text-center sm:block sm:p-0">
          <div class="fixed inset-0 transition-opacity">
            <div class="absolute inset-0 bg-gray-900 opacity-75" />
          </div>
          <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
          <div class="inline-block align-center bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full" role="dialog" aria-modal="true" aria-labelledby="modal-headline">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
              <label>Enter Score</label>
              <input type="text" class="w-full bg-gray-100 p-2 mt-2 mb-3" id="score" />
            </div>
            <div class="bg-gray-200 px-4 py-3 text-right">
              <button type="button" class="py-2 px-4 bg-gray-500 text-white rounded hover:bg-gray-700 mr-2" onclick="closeScoreModal()"><i class="fas fa-times"></i> Cancel</button>
              <button type="button" class="py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-700 mr-2" onclick="submitScore()"><i class="fas fa-plus"></i> Submit</button>
            </div>
          </div>
        </div>
      </div>
<%- include('../partials/footer.ejs'); %>

