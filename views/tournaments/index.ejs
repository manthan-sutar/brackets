<%- include('../partials/headers.ejs'); %>

    <div class="p-10">
        <ul>
            <% tournaments.forEach(function(tournament,index) { %>
              <li>
                <div class="border rounded p-6">
                    <div class="inline-flex items- w-full justify-between">
                        <h1 class="font-bold text-xl"><%= tournament.name %></h1>
                        <a class="text-white bg-green-600 rounded-full px-4 py-2 hover:bg-teal-900 font-semibold lowercase duration-700" id="manage-tournament" href="<%= tournament.id %>">Manage / View</a>
                    </div>
                    <div class="inline-flex items- w-full justify-between">
                        <h1 class="font-bold text-lg text-gray-600">Total Competitors : <%= tournament.number_of_competators %></h1>
                    </div>
                </div>
              </li>
            <% }); %>
          </ul>
    </div>

    
    <%- include('../partials/footer.ejs'); %>